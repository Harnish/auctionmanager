<h1>Listing buyers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Biddernumber</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
    <th>Here</th>
    <th>Cash Out</th>
  </tr>

<% @buyers.each do |buyer| %>
  <tr>
    <td><%= buyer.name %></td>
    <td><%= number_with_precision(buyer.bidderNumber, :strip_insignificant_zeros => true) %></td>
    <td><%= buyer.address %></td>
    <td><%= buyer.city %></td>
    <td><%= buyer.state %></td>
    <td><%= buyer.zip %></td>
    <td><%= buyer.phone %></td>
    <td><%= buyer.email %></td>
    <td><%= link_to 'Show', buyer %></td>
    <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
    <td><%= link_to 'Destroy', buyer, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><a href="/buyers/<%= number_with_precision(buyer.id, :strip_insignificant_zeros => true) %>/here">
	<% if buyer.here %>
             Here
        <% else %>
	     Not Here
	<% end %>
	</a></td>
    <td><a href="/buyers/<%= number_with_precision(buyer.id, :strip_insignificant_zeros => true) %>/cashout">Cashout</a></td> 
  </tr>
<% end %>
</table>

