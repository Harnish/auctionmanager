    <%= f.label :donor_id %><br />
     <%= f.collection_select( :donor_id, Donor.all, :id, :name)  %> <a href="/donors/new">New Donor</a>
  </div>
  <div class="field">
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :certificate %><br />
    <%= f.check_box :certificate %>
  </div>
  <div class="field">
    <%= f.label :delivered %><br />
    <%= f.check_box :delivered %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
